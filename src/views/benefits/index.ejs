<div class="container">
    <div class="box">
        <h1 class="title is-4">Beneficios</h1>

        <table class="table is-bordered is-hoverable is-fullwidth">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Nombre</th>
                    <th>Monto</th>
                    <th>Empleado</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                <% benefits.forEach((benefit, index) => { %>
                    <tr>
                        <td><%= index + 1 %></td>
                        <td><%= benefit.benefit_name %></td>
                        <td>$<%= benefit.amount %></td>
                        <td><%= benefit.employee_name %></td>
                        <td>
                            <a href="/benefits/edit/<%= benefit.id %>" class="button is-small is-info">Editar</a>
                            <a href="/benefits/delete/<%= benefit.id %>" class="button is-small is-danger delete-button">Eliminar</a>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>

        <a href="/benefits/create" class="button is-link mt-3">Agregar Nuevo Beneficio</a>
    </div>
</div>

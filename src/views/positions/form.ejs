<div class="container">
    <div class="box">
        <h1 class="title is-4"><%= position ? "Editar Puesto" : "Agregar Nuevo Puesto" %></h1>
        <form action="<%= position ? `/positions/edit/${position.id}` : '/positions/create' %>" method="POST">
            <div class="field">
                <label class="label" for="name">Nombre del Puesto</label>
                <div class="control">
                    <input
                        class="input"
                        type="text"
                        id="name"
                        name="name"
                        placeholder="Nombre del puesto"
                        value="<%= position ? position.name : '' %>"
                        required
                    />
                </div>
            </div>

            <div class="field">
                <label class="label" for="base_salary">Salario Base</label>
                <div class="control">
                    <input
                        class="input"
                        type="number"
                        id="base_salary"
                        name="base_salary"
                        placeholder="Salario base"
                        value="<%= position ? position.base_salary : '' %>"
                        required
                    />
                </div>
            </div>

            <div class="field is-grouped">
                <div class="control">
                    <button class="button is-link" type="submit">Guardar</button>
                </div>
                <div class="control">
                    <a href="/positions" class="button is-light">Cancelar</a>
                </div>
            </div>
        </form>
    </div>
</div>

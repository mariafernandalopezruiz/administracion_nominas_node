<div class="container">
    <div class="box">
        <h1 class="title is-4">Puestos</h1>

        <table class="table is-bordered is-hoverable is-fullwidth">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Nombre</th>
                    <th>Salario Base</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                <% positions.forEach((position, index) => { %>
                    <tr>
                        <td><%= index + 1 %></td>
                        <td><%= position.name %></td>
                        <td>$<%= position.base_salary %></td>
                        <td>
                            <a href="/positions/edit/<%= position.id %>" class="button is-small is-info">Editar</a>
                            <a href="/positions/delete/<%= position.id %>" class="button is-small is-danger delete-button">Eliminar</a>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>

        <a href="/positions/create" class="button is-link mt-3">Agregar Nuevo Puesto</a>
    </div>
</div>

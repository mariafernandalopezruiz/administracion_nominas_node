<div class="container">
    <div class="box">
        <h1 class="title is-4">Nóminas</h1>

        <table class="table is-bordered is-hoverable is-fullwidth">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Empleado</th>
                    <th>Salario</th>
                    <th>Bono</th>
                    <th>Deducciones</th>
                    <th>Total</th>
                    <th>Fecha de Pago</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                <% payrolls.forEach((payroll, index) => { %>
                    <tr>
                        <td><%= index + 1 %></td>
                        <td><%= payroll.employee_name %></td>
                        <td>$<%= payroll.salary %></td>
                        <td>$<%= payroll.bonus %></td>
                        <td>$<%= payroll.deductions %></td>
                        <td>$<%= payroll.total %></td>
                        <td><%= payroll.payment_date %></td>
                        <td>
                            <a href="/payrolls/edit/<%= payroll.id %>" class="button is-small is-info">Editar</a>
                            <a href="/payrolls/delete/<%= payroll.id %>" class="button is-small is-danger delete-button">Eliminar</a>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>

        <a href="/payrolls/create" class="button is-link mt-3">Agregar Nueva Nómina</a>
    </div>
</div>
